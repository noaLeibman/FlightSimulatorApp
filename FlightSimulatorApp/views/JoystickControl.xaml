<UserControl x:Class="FlightSimulatorApp.Views.JoystickControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:FlightSimulatorApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">
    <Grid>
        <Canvas Margin="0" Width="340" Height="340">
        <c:Joystick/>
        </Canvas>
        <Canvas Width="300" Height="300">
            <Slider x:Name="Throttle" Maximum="1" TickFrequency="10" Width="269"/>
        </Canvas>
        
    </Grid>
</UserControl>
